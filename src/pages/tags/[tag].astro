---
import DigitalGardenLayout from '../../layouts/DigitalGardenLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const allTags = [...new Set(posts.flatMap((post) => post.data.tags))];

  return allTags.map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: posts.filter((post) => post.data.tags.includes(tag)),
    },
  }));
}

interface Props {
  tag: string;
  posts: any[];
}

const { tag, posts } = Astro.props;
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<DigitalGardenLayout
  title={`#${tag} - Tech Notes`}
  showBacklinks={false}
  showMiniGraph={false}
  showToc={false}
>
  <div class="tag-page">
    <header class="tag-header">
      <a href="/tags" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        All tags
      </a>
      <h1 class="tag-title">
        <span class="tag-hash">#</span>{tag}
      </h1>
      <p class="tag-count">{posts.length} note{posts.length === 1 ? '' : 's'}</p>
    </header>

    <div class="posts-list">
      {sortedPosts.map((post) => (
        <article class="post-item">
          <a href={`/posts/${post.slug}`} class="post-link">
            <div class="post-header">
              <h2 class="post-title">{post.data.title}</h2>
              <time class="post-date" datetime={post.data.date.toISOString()}>
                {new Date(post.data.date).toLocaleDateString('ko-KR', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </div>
            {post.data.excerpt && (
              <p class="post-excerpt">{post.data.excerpt}</p>
            )}
          </a>
        </article>
      ))}
    </div>
  </div>
</DigitalGardenLayout>

<style>
  .tag-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .tag-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--bg-tertiary);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--link);
    text-decoration: none;
    margin-bottom: 1rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .tag-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .tag-hash {
    color: var(--text-muted);
    font-weight: 400;
  }

  .tag-count {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    border-radius: 8px;
    transition: transform 0.15s ease;
  }

  .post-item:hover {
    transform: translateY(-2px);
  }

  .post-link {
    display: block;
    padding: 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--bg-tertiary);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.15s ease;
  }

  .post-link:hover {
    border-color: var(--accent-primary);
  }

  .post-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
    transition: color 0.15s ease;
  }

  .post-link:hover .post-title {
    color: var(--accent-primary);
  }

  .post-date {
    font-size: 0.75rem;
    color: var(--text-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .post-excerpt {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .post-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .post-date {
      order: -1;
    }
  }
</style>
