---
import DigitalGardenLayout from '../../layouts/DigitalGardenLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => !data.draft);

// Get all tags with their post counts
const tagCounts = new Map<string, number>();
for (const post of posts) {
  for (const tag of post.data.tags) {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  }
}

// Sort tags by count
const sortedTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1]);
---

<DigitalGardenLayout
  title="Tags - Tech Notes"
  showBacklinks={false}
  showMiniGraph={false}
  showToc={false}
>
  <div class="tags-page">
    <header class="tags-header">
      <h1 class="tags-title">Tags</h1>
      <p class="tags-description">Browse notes by topic</p>
    </header>

    {sortedTags.length === 0 ? (
      <div class="tags-empty">
        <p>No tags yet. Add tags to your notes!</p>
      </div>
    ) : (
      <div class="tags-cloud">
        {sortedTags.map(([tag, count]) => (
          <a href={`/tags/${tag}`} class="tag-item">
            <span class="tag-name">{tag}</span>
            <span class="tag-count">{count}</span>
          </a>
        ))}
      </div>
    )}
  </div>
</DigitalGardenLayout>

<style>
  .tags-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .tags-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--bg-tertiary);
  }

  .tags-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .tags-description {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .tags-empty {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--text-muted);
    background: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--bg-tertiary);
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--bg-tertiary);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .tag-item:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
  }

  .tag-name {
    color: var(--text-primary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.15s ease;
  }

  .tag-item:hover .tag-name {
    color: var(--accent-primary);
  }

  .tag-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    height: 1.5rem;
    padding: 0 0.375rem;
    background: var(--bg-tertiary);
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-muted);
  }
</style>
